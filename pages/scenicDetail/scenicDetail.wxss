.weatherBaseBox {
    border-radius: 20rpx;
    display: flex;
    width: 92%;
    margin: 0 auto;
    height: 200rpx;
    padding: 20rpx;
    margin: 0 atuo;
    background:linear-gradient(60deg,#96deda 0%, #50c9c3 100%);
    /* 半透明背景，避免压抑感 */
    border-radius: 12rpx;
    /* 圆角，增加柔和感 */
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
    /* 轻微阴影，增加立体感 */
    justify-content: space-around;
}

.left,
.right {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.left {
    padding-right: 15rpx;
}

.right {
    padding-left: 15rpx;
}

.weatherBaseBox view {
    font-size: 26rpx;
    /* 统一字体大小 */
    color: #444;
    /* 字体颜色，深灰色，增强对比度 */
    margin-bottom: 10rpx;
    /* 每项之间有适当间距 */
}

.left view {
    font-weight: bold;
    /* 左侧的湿度和时间加粗突出 */
    color: #007aff;
    /* 蓝色字体，突出重点 */
}

.right view {
    font-size: 28rpx;
    /* 右侧字体稍大，突出温度、天气等关键信息 */
}

.right view:nth-child(2) {
    color: #ff9800;
    /* 温度使用橙色，传递热情感 */
}

.right view:nth-child(3) {
    color: #32cd32;
    /* 风向使用绿色，代表清新感 */
}

